
@model IEnumerable<WebApplication2_2.Models.Comment>
@{
    ViewData["Title"] = "ManageComments";
}


<!-- Contect And Main Contect -->
<div id="content">
    <div id="mainContent">

        <h2>Comments - From Database - Manage Panel</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CommentTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommentWriter)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommentWriterURL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommentContent)
                </th>

                <th></th>
            </tr>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommentTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommentWriter)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommentWriterURL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommentContent)
                    </td>
                    <td>
                        <a asp-action="DeleteComment" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }

            </table>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

            <!--div of main contect-->
        </div>
    </div>


